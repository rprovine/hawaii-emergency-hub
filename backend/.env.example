# Backend Environment Variables
# Copy this file to .env and update with your values

# Application
PROJECT_NAME="Hawaii Emergency Network Hub"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL="postgresql://postgres:password@localhost/hawaii_emergency"

# Redis
REDIS_URL="redis://localhost:6379"

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:19006,http://localhost:8081"

# Email Configuration
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST="smtp.gmail.com"
SMTP_USER=""
SMTP_PASSWORD=""
EMAILS_FROM_EMAIL="alerts@hawaii-emergency.gov"
EMAILS_FROM_NAME="Hawaii Emergency Network"

# External APIs
WEATHER_API_KEY=""
USGS_API_URL="https://earthquake.usgs.gov/earthquakes/feed/v1.0/summary/"
NWS_API_URL="https://api.weather.gov/"

# Alert Settings
ALERT_EXPIRY_HOURS=24
MAX_ALERT_RADIUS_MILES=100
DEFAULT_ALERT_RADIUS_MILES=25

# Performance
MAX_WEBSOCKET_CONNECTIONS=10000
ALERT_CACHE_TTL_SECONDS=300

# Monitoring (optional)
SENTRY_DSN=""
PROMETHEUS_ENABLED=false