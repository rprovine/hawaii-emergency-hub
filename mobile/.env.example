# Mobile App Environment Variables
# Copy this file to .env and update with your values

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:8000/api/v1
EXPO_PUBLIC_WS_URL=ws://localhost:8000

# Feature Flags
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_HAPTICS=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true

# Map Configuration
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=""
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=""

# Push Notifications
EXPO_PUBLIC_FCM_SERVER_KEY=""
EXPO_PUBLIC_APNS_KEY=""

# Analytics (optional)
EXPO_PUBLIC_AMPLITUDE_API_KEY=""
EXPO_PUBLIC_MIXPANEL_TOKEN=""
EXPO_PUBLIC_SENTRY_DSN=""

# App Configuration
EXPO_PUBLIC_APP_NAME="Hawaii Emergency Network"
EXPO_PUBLIC_APP_SLUG="hawaii-emergency-network"
EXPO_PUBLIC_APP_VERSION="1.0.0"