{
  "expo": {
    "name": "Hawaii Emergency Network",
    "slug": "hawaii-emergency-network",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#006B96"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "gov.hawaii.emergency.network",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Hawaii Emergency Network needs your location to send you relevant emergency alerts for your area.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Hawaii Emergency Network needs your location to send you critical emergency alerts even when the app is in the background.",
        "UIBackgroundModes": ["location", "fetch", "remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#006B96"
      },
      "package": "gov.hawaii.emergency.network",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Hawaii Emergency Network needs your location to send you relevant emergency alerts for your area."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#006B96",
          "sounds": ["./assets/sounds/alert.wav"]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
